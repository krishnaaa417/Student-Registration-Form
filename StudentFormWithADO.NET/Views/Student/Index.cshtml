@model IEnumerable<Student>

<h2>Students</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add Student</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>DOJ</th>
            <th>Course</th>
            <th>Incharge</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.PhoneNumber</td>
                <td>@student.Email</td>
                <td>@student.Address</td>
                <td>@student.DOJ.ToShortDateString()</td>
                <td>@student.CourseName</td>
                <td>@student.InchargeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
