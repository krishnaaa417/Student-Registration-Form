@{
}

@model IEnumerable<Student_Registration_Form.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Course</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@course.Id">View</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
